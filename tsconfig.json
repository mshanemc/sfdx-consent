  "compilerOptions": {
    "allowJs": false,
    "lib": ["dom", "esNext", "ES2019.Array"],
    "outDir": "./lib",
    "rootDirs": ["./src"],
    "baseUrl": "./",
    "paths": {
      "*": ["./node_modules/@salesforce/core/typings/*"]
    },
    "types": ["node", "jest", "js2xmlparser"],
    "target": "ES6"
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./test/**",
    "./testProject*/**/*",
    "./test/**/*",
    "./mshanemc-*/**/*"
  ]
}
